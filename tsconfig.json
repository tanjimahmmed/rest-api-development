{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src",
        "baseUrl": "./",
        "outDir": "dist",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}